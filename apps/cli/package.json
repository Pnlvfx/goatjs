{
  "name": "@goatjs/cli",
  "description": "Development CLI for testing and experimenting with GoatJS packages.",
  "private": true,
  "license": "MIT",
  "author": "Simone Gauli",
  "main": "dist/cli.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "apps/cli"
  },
  "scripts": {
    "unused": "node tools/unused.ts",
    "tsc": "tsc --noEmit",
    "lint": "eslint",
    "dev": "tsx --no-cache --watch src/cli.ts",
    "build": "rimraf dist && eslint && tsc -p tsconfig.build.json",
    "start": "node ."
  },
  "dependencies": {
    "@goatjs/cache": "workspace:*",
    "@goatjs/core": "workspace:*",
    "@goatjs/storage": "workspace:*"
  },
  "devDependencies": {
    "@goatjs/dbz": "workspace:*",
    "@goatjs/node-monorepo-eslint": "^1.37.0",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/ts-unused-exports": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
