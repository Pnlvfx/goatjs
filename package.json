{
  "name": "goatjs",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git"
  },
  "scripts": {
    "tsc": "nx run-many -t tsc",
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev",
    "lint": "nx run-many -t lint",
    "initialize": "yarn workspace @goatjs/node prettier-gen",
    "postinstall": "yarn initialize",
    "update": "yarn upgrade-interactive",
    "publish": "tsx tools/publish.ts",
    "release": "tsx tools/release.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@goatjs/dbz": "workspace:*",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@nx/js": "^21.4.0",
    "@types/yargs": "^17.0.33",
    "nx": "21.4.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "yargs": "^18.0.0"
  },
  "packageManager": "yarn@4.9.3+sha512.8295ee814f6b253e16f516416481b481a215ed03ef1ae38524d108084872560a9ed75aeb23b91ab64222062ac4149a594150ae538c2a9536fdbcefd4e49b11cc"
