{
  "name": "@goatjs/dbz",
  "description": "CLI tool and library for publishing packages to npm with monorepo support.",
  "version": "1.70.0",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "packages/dbz"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "bin": "src/cli.ts",
  "publishConfig": {
    "exports": {
      "./*": {
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js",
        "require": "./dist/*.js"
      }
    },
    "bin": "dist/cli.js"
  },
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "",
    "lint": "eslint",
    "build": "rimraf dist && eslint && tsc -p tsconfig.build.json",
    "prepare": "yarn build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && eslint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@goatjs/node": "workspace:*",
    "@goatjs/rimraf": "workspace:*",
    "@types/cross-spawn": "^6.0.6",
    "cross-spawn": "^7.0.6",
    "execa": "^9.6.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@goatjs/node-monorepo-eslint": "^1.38.0",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "@types/yargs": "^17.0.35",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3"
  }
}
