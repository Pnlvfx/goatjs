{
  "name": "@goatjs/db",
  "description": "The GOAT nodejs db.",
  "version": "1.12.0",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "packages/db"
  },
  "license": "MIT",
  "type": "module",
  "exports": "./src/mongo.ts",
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/mongo.d.ts",
        "import": "./dist/mongo.js"
      },
      "./experimental": {
        "types": "./dist/experimental/mongo.d.ts",
        "import": "./dist/experimental/mongo.js"
      }
    }
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "test": "",
