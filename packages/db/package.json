    "prepublishOnly": "yarn test && eslint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "mongodb": "^6.18.0"
  },
  "devDependencies": {
    "@goatjs/node-monorepo-eslint": "^1.2.0",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "typescript": "^5.9.2",
    "zod": "^4.0.17"
  }
