{
  "name": "@goatjs/storage",
  "description": "Persistent storage utilities for Node.js applications with support for files, stores, and logging.",
  "version": "1.71.0",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "packages/storage"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/storage.ts",
    "./logger": "./src/logger.ts",
    "./store": "./src/store.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/storage.d.ts",
        "import": "./dist/storage.js",
        "require": "./dist/storage.js"
      },
      "./logger": {
        "types": "./dist/logger.d.ts",
        "import": "./dist/logger.js",
        "require": "./dist/logger.js"
      },
      "./store": {
        "types": "./dist/store.d.ts",
        "import": "./dist/store.js",
        "require": "./dist/store.js"
      }
    }
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "test": "",
    "lint": "eslint",
    "build": "rimraf dist && eslint && tsc -p tsconfig.build.json",
    "prepare": "yarn build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && eslint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@goatjs/node": "workspace:*",
    "@goatjs/node-monorepo-eslint": "^1.38.0",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@goatjs/node": "*",
    "zod": "*"
  }
}
