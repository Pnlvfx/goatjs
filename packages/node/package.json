{
  "name": "@goatjs/node",
  "description": "Your favourite package helper.",
  "version": "1.13.0",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "packages/node"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "exports": {
      "./*": {
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js"
      }
    }
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "test": "",
    "lint": "eslint",
    "build": "rimraf dist && eslint && tsc -p tsconfig.build.json",
    "prepare": "yarn build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && eslint",
    "prettier-gen": "tsx tools/prettier-gen.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "sanitize-filename": "1.6.3"
  },
  "devDependencies": {
    "@goatjs/node-monorepo-eslint": "^1.2.0",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "prettier": "*"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  }
}
