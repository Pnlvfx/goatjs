{
  "name": "@goatjs/node",
  "description": "Node.js utility functions for file system operations, process management, git operations, and CLI helpers.",
  "version": "1.68.0",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "packages/node"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "exports": {
      "./*": {
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js",
        "require": "./dist/*.js"
      }
    }
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "test": "",
    "lint": "eslint",
    "build": "rimraf dist && eslint && tsc -p tsconfig.build.json",
    "prepare": "yarn build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && eslint",
    "prettier-gen": "node tools/prettier-gen.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@goatjs/core": "workspace:*",
    "sanitize-filename": "1.6.3"
  },
  "devDependencies": {
    "@goatjs/node-monorepo-eslint": "^1.38.0",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "prettier": "*"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  }
}
