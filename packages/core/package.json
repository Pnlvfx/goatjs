{
  "name": "@goatjs/core",
  "description": "Core utility functions for JavaScript and TypeScript projects including arrays, strings, dates, colors, objects, and types.",
  "version": "1.71.0",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pnlvfx/goatjs.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "exports": {
      "./*": {
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js",
        "require": "./dist/*.js"
      }
    }
  },
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "",
    "lint": "eslint",
    "build": "rimraf dist && eslint && tsc -p tsconfig.build.json",
    "prepare": "yarn build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && eslint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@goatjs/node-monorepo-eslint": "^1.45.0",
    "@goatjs/rimraf": "workspace:*",
    "@goatjs/typescript-config": "workspace:*",
    "@types/node": "^25.3.3",
    "eslint": "^10.0.2",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  }
}
