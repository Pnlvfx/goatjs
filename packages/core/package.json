{
  "name": "@goatjs/core",
  "description": "Your favourite package helper.",
  "version": "2025.1.30",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/goatjs.git"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/esm/*.d.ts",
        "default": "./dist/esm/*.js"
      },
      "require": {
        "types": "./dist/cjs/*.d.ts",
        "default": "./dist/cjs/*.js"
      }
    }
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "generate:package.json": "node ./tools/generate-commonjs-package-json.ts dist/cjs/package.json",
    "test": "rimraf coverage && jest --coverage",
    "lint": "eslint",
    "build": "rimraf dist && eslint && yarn build:esm && yarn build:cjs && yarn generate:package.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.build.json --module CommonJS --moduleResolution Node --outDir dist/cjs",
    "prepare": "npm run build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test && eslint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/eslint__js": "^8.42.3",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.13.0",
    "eslint": "^9.19.0",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "mime-types": "^2.1.35",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-unused-exports": "^11.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "peerDependencies": {
    "mime-types": "*",
    "ts-unused-exports": "*"
  },
  "peerDependenciesMeta": {
    "mime-types": {
      "optional": true
    },
    "ts-unused-exports": {
      "optional": true
    }
  },
  "packageManager": "yarn@4.6.0+sha512.5383cc12567a95f1d668fbe762dfe0075c595b4bfff433be478dbbe24e05251a8e8c3eb992a986667c1d53b6c3a9c85b8398c35a960587fbd9fa3a0915406728"
}
